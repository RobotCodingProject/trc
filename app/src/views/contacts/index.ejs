<%- include("../home/include/_header") %>
<head>
  <link rel="stylesheet" href="/css/contacts/style.css" />
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
    crossorigin="anonymous"
    referrerpolicy="no-referrer"
  />
</head>
<!-- Main -->
<main id="site-main">
  <h2>Student Records</h2>

  <div class="button-box">
    <a href="/contacts/add" class="btn btn-light"
      ><i class="fa-solid fa-user-plus"></i>Add Student</a
    >
  </div>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Mobile</th>
        <th>&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <% contacts.forEach( contact => { %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.email %></td>
        <td><%= contact.mobile %></td>
        <td>
          <a href="/contacts/<%= contact.id %>" class="btn update" title="Edit">
            <i class="fas fa-pencil-alt"></i>
          </a>
          <form
            action="/contacts/<%= contact.id %>?_method=DELETE"
            method="POST"
            style="display: inline"
          >
            <input type="submit" class="btn delete" title="Delete" value="X">
            </button>
          </form>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</main>
<!-- /Main -->

<%- include("../home/include/_footer") %>