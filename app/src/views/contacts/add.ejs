<%- include("../home/include/_header") %>
<head>
  <link rel="stylesheet" href="/css/contacts/style.css" />
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
    crossorigin="anonymous"
    referrerpolicy="no-referrer"
  />
</head>
  <!-- Main -->
    <main id="site-main">
      <div class="button-box">        
        <a href="/contacts" class="btn btn-light"><i class="fa-solid fa-list"></i>Student Lists</a>
      </div>
      </div>
      <h2>Add Student</h2>          
      <form action="/contacts/add" method="POST" id="add-user">
        <div class="user-info">
          <div class="col-12">
            <label for="student_id" class="col-form-label">Student ID</label>
            <div>
              <input type="int" placeholder="Auto-generated" readonly>
            </div>
          </div>
          <div class="col-12">
            <label for="status" class="col-form-label">Status</label>
            <div>
              <select name="status" id="status" class="form-control" required>
                <option value="enrolled">Enrolled</option>
                <option value="trial">Trial</option>
                <option value="hold">Hold</option>
              </select>
            </div>
          </div>
          <div class="col-12">
            <label for="student_name" class="col-form-label">Name</label>
            <div>
              <input type="varchar(45)" class="form-control" name="student_name" id="student_name" placeholder="Student Name">
            </div>
          </div>
          <div class="col-12">
            <label for="school_name" class="col-form-label">School</label>
            <div>
              <input type="varchar(45)" class="form-control" name="school_name" id="school_name" placeholder="School Name">
            </div>
          </div>
          <div class="col-12">
            <label for="school_year" class="col-form-label">Year</label>
            <div>
              <input type="int" class="form-control" name="school_year" id="school_year" placeholder="Year">
            </div>
          </div>
          <div class="col-12">
            <label for="email" class="col-form-label">Email</label>
            <div>
              <input type="varchar(45)" class="form-control" name="email" id="email" placeholder="user@trc.edu">
            </div>
          </div>
          <div class="col-12">
            <label for="parent_name" class="col-form-label">Parent Name</label>
            <div>
              <input type="varchar(45)" class="form-control" name="parent_name" id="parent_name" placeholder="Parent Name">
            </div>
          </div>
          <div class="col-12">
            <label for="contact_number" class="col-form-label">Contact Number</label>
            <div>
              <input type="varchar(45)" class="form-control" name="contact_number" id="contact_number" placeholder="0400000000">
            </div>
          </div>
          <!-- <div class="col-12">
            <label for="trial_date_time" class="col-form-label">Trial</label>
            <div>
              <input type="datetime" class="form-control" name="trial_date_time" id="trial_date_time" placeholder="2025-01-20 14:00:00">
            </div>
          </div> -->
          <div class="col-12">
            <label for="ndis" class="col-form-label">NDIS</label>
            <div>
              <select name="status" id="status" class="form-control">
                <option value="no">No</option>
                <option value="yes">Yes</option>
              </select>
            </div>
          </div>
          <div class="col-12">
            <label for="class_day" class="col-form-label">Class Day</label>
            <div>
              <!-- <input type="enum" class="form-control" name="class_day" id="class_day" placeholder="Class Day"> -->
              <label><input type="checkbox" name="class_day[]" value="Monday"> Monday</label>
              <label><input type="checkbox" name="class_day[]" value="Tuesday"> Tuesday</label>
              <label><input type="checkbox" name="class_day[]" value="Wednesday"> Wednesday</label>
              <label><input type="checkbox" name="class_day[]" value="Thursday"> Thursday</label>
              <label><input type="checkbox" name="class_day[]" value="Friday"> Friday</label>
              <label><input type="checkbox" name="class_day[]" value="Saturday"> Saturday</label>
              <label><input type="checkbox" name="class_day[]" value="Sunday"> Sunday</label>
            </div>
          </div>
          <div class="col-12">
            <label for="start_time" class="col-form-label">Class Start Time</label>
            <div>
              <input type="time" class="form-control" name="start_time" id="start_time">
            </div>
          </div>
          <div class="col-12">
            <label for="end_time" class="col-form-label">Class End Time</label>
            <div>
              <input type="time" class="form-control" name="end_time" id="end_time">
            </div>
          </div>
          <div class="col-12">
            <label for="memo" class="col-form-label">Memo</label>
            <div>
              <input type="text" class="form-control" name="memo" id="memo" placeholder="Memo">
            </div>
          </div>
          <button type="submit">Save</button>
        </div>
      </form>   
    </main>
  <!-- /Main -->

  <%- include("../home/include/_footer") %>