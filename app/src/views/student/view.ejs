<%- include("../home/include/_header") %>

<div class="container">
  <div class="student-card">
    <div class="student-header">
      <img src="<%= student.avatar %>" alt="<%= student.name %>" class="student-avatar">
      <div class="student-info">
        <h3 class="student-name"><%= student.name %></h3>
        <div class="student-id"><i class="fas fa-id-card"></i> ID: <%= student.studentId %></div>
        <span class="student-status <%= student.status === 'active' ? 'status-active' : 'status-inactive' %>">
          <i class="fas fa-<%= student.status === 'active' ? 'check-circle' : 'times-circle' %>"></i>
          <%= student.status.charAt(0).toUpperCase() + student.status.slice(1) %>
        </span>
      </div>
    </div>
    
    <div class="profile-section">
      <h3>Student Details</h3>
      <div class="profile-details">
        <div class="detail-item">
          <div class="detail-label"><i class="fas fa-envelope"></i> Email</div>
          <div class="detail-value"><%= student.email %></div>
        </div>
        <div class="detail-item">
          <div class="detail-label"><i class="fas fa-phone"></i> Phone</div>
          <div class="detail-value"><%= student.phone %></div>
        </div>
        <div class="detail-item">
          <div class="detail-label"><i class="fas fa-graduation-cap"></i> Grade</div>
          <div class="detail-value"><%= student.grade %></div>
        </div>
        <div class="detail-item">
          <div class="detail-label"><i class="fas fa-calendar-check"></i> Enrolled</div>
          <div class="detail-value"><%= new Date(student.enrollmentDate).toLocaleDateString() %></div>
        </div>
      </div>
    </div>
    
    <div class="profile-section">
      <h3>Academic Records</h3>
      <p>No academic records available yet.</p>
    </div>
    
    <div class="profile-actions">
      <a href="/student/edit/<%= student.id %>" class="btn btn-primary">
        <i class="fas fa-user-edit"></i> Edit Student
      </a>
      <a href="/student" class="btn btn-info">
        <i class="fas fa-arrow-left"></i> Back to List
      </a>
      <form action="/student/delete/<%= student.id %>" method="POST" style="display: inline;">
        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this student?')">
          <i class="fas fa-trash"></i> Delete Student
        </button>
      </form>
    </div>
  </div>
</div>

<%- include("../home/include/_footer") %> 