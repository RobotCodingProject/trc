<%- include("./include/_header") %>

<head>
  <link rel="stylesheet" href="css/schedule/style.css" />
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.0/main.min.css" rel="stylesheet" />
</head>

<main>
  <section class="hero-without-image">
    <div class="container-2">
      <div class="hero-wrapper-two">
        <h1>Announcements</h1>
        <p class="margin-bottom-24px">
          Stay updated with important information about school holidays, schedule changes, 
          and upcoming events at Robot Coding Academy.
        </p>
        <div class="announcement-container">
          <div class="announcement-item">
            <div class="announcement-date">May 15, 2024</div>
            <div class="announcement-title">School Holiday - Memorial Day</div>
            <div class="announcement-content">
              All classes will be closed on Monday, May 27, 2024 in observance of Memorial Day. 
              Regular classes will resume on Tuesday, May 28, 2024.
            </div>
          </div>
          <div class="announcement-item">
            <div class="announcement-date">May 10, 2024</div>
            <div class="announcement-title">End of Semester Schedule</div>
            <div class="announcement-content">
              The spring semester will end on June 15, 2024. Summer classes will begin on July 1, 2024. 
              Please update your availability for the summer session by June 10.
            </div>
          </div>
          <div class="announcement-item">
            <div class="announcement-date">May 5, 2024</div>
            <div class="announcement-title">Teacher Professional Development Day</div>
            <div class="announcement-content">
              All teachers are required to attend the professional development session on 
              Saturday, May 18, 2024 from 9:00 AM to 3:00 PM. Lunch will be provided.
            </div>
          </div>
        </div>
        <a href="/schedule" class="button-primary">View Your Schedule</a>
      </div>
    </div>
  </section>

  <section class="gallery-overview">
    <div class="container-3">
      <div class="gallery-wrapper">
        <div class="gallery-block">
          <h3>Teaching Schedule</h3>
          <div id="calendar"></div>
          <div class="gallery-features-block">
            <ul role="list" class="gallery-list">
              <li>
                <div class="gallery-feature">
                  View and manage your upcoming teaching sessions
                </div>
              </li>
              <li>
                <div class="gallery-feature">
                  Schedule new classes and update existing ones
                </div>
              </li>
              <li>
                <div class="gallery-feature">
                  Access student information and class materials
                </div>
              </li>
              <li>
                <div class="gallery-feature">
                  Track attendance and progress reports
                </div>
              </li>
            </ul>
          </div>
          <div style="text-align: center; margin-top: 30px;">
            <a href="/schedule" class="button-primary">View Full Calendar</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- External JS files -->
  <script src="https://d3e54v103j8qbb.cloudfront.net/js/jquery-3.5.1.min.dc5e7f18c8.js?site=66c5fd3a164a4f78fb5ef34a" type="text/javascript" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
  <script src="js/webflow.js" type="text/javascript"></script>
  <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.0/main.min.js"></script>

  <script>
    document.addEventListener("DOMContentLoaded", function () {
      var calendarEl = document.getElementById("calendar");
      var calendar = new FullCalendar.Calendar(calendarEl, {
        initialView: "timeGridWeek",
        initialDate: new Date(),
        events: [], // your events go here
        editable: true,
        slotMinTime: "09:00:00",
        slotMaxTime: "19:00:00",
        headerToolbar: {
          left: 'prev,next today',
          center: 'title',
          right: 'timeGridWeek,timeGridDay'
        },
        themeSystem: 'bootstrap',
        height: 'auto',
        aspectRatio: 1.8,
        businessHours: {
          daysOfWeek: [1, 2, 3, 4, 5], // Monday - Friday
          startTime: '09:00',
          endTime: '19:00'
        },
        slotLabelFormat: {
          hour: '2-digit',
          minute: '2-digit',
          hour12: true
        }
      });
      calendar.render();
    });
  </script>
</main>

<%- include("./include/_footer") %>
