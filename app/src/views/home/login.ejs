<%- include("./include/_header") %>

<!-- Main -->
<main id="site-main">
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login | The Robot Coding</title>

  <!-- Link to external CSS -->
  <link rel="stylesheet" href="css/home/login.css">
  <!-- <link rel="icon" href="./logo.png" type="image/x-icon"> -->

  <body>
    <div class="login-page-wrapper">
      <!-- Left Side (Logo, Title, Image, Description) -->
      <div class="left-layout">
        <div class="logo-container">
          <img src="../image/logo.png" alt="The Robot Coding Logo" class="logo-img">
        </div>
        <h1 class="site-title">The Robot Coding</h1>
        <img src="../image/background.jpg" alt="Description Image" class="description-img">
        <div class="description-box">
          <p class="description-text">
            Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse tincidunt sagittis eros. Quisque quis
            euismod lorem. Etiam sodales ac felis id interdum.
          </p>
        </div>
      </div>
      
      <!-- Right Side (Login Form) -->
      <div class="right-layout">
        <div class="login-form-container">
          <h2>Welcome!</h2>
          <form id="login-form">
            <input id="id" type="text" placeholder="Id" required>
            <input id="pw" type="password" placeholder="Password" required>
            <p id="button" type="button">Login</p>
          </form>
          <div class="create-account-link">
            <p>Not registered? <a href="/register">Sign up</a></p>
          </div>
        </div>
      </div>
    </div>
  </body>
</main>
<!-- /Main -->

<script src="/js/home/login.js" defer></script>
<%- include("./include/_footer") %>
